<% layout("layouts/boilerplate") -%>
<body>
  <div class="row mt-1">
    <div class="col-8 offset-2">
      <h3>Edit Listings</h3>
      <form method="post" action="/listings/<%=listing._id%>?_method=PUT" class="mt-3">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            id="title"
            value="<%=listing.title%>"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id="description"
            cols="50"
            rows="3"
            class="form-control"
          ><%=listing.description%></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input
            type="text"
            name="listing[image]"
            id="image"
            value="<%=listing.image%>"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-sm-6">
            <label for="price" class="form-label">Price</label>
            <input
            type="text"
            name="listing[price]"
            id="price"
            value=" &#8377; <%=listing.price%>"
            class="form-control"
            />
          </div>
          <div class="mb-3 col-sm-6">
            <label for="location" class="form-label">Location</label>
            <input
            type="text"
            name="listing[location]"
            id="location"
            value="<%=listing.location%>"
            class="form-control"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            id="country"
            value="<%=listing.country%>"
            class="form-control"
          />
        </div>
        <div class="mb-4 mt-4">
          <button class="btn btn-danger">Edit Listing</button>
        </div>
      </form>
    </div>
  </div>
</body>
