<% layout("layouts/boilerplate") -%>
<body>
  <div class="row mt-1">
    <div class="col-lg-12 d-flex justify-content-center">
      <div class="card w-75 listing-card">
        <h3>Place: <%=listing.title%></h3>
        <img
          src="<%= listing.image.url%>"
          class="card-img-top"
          alt="listing image"
          style="height: 25rem"
        />
        <div class="card-body ms-2">
       <p class="card-text">
            <div class="mt-1">
              <b> Owned By: </b> <i>@<%=listing.owner.username%></i> <br>
            </div>
            <div class="mt-1">
              <b> About place: </b><%=listing.description%> <br>
            </div>
            <div class="mt-1">
              <b>Price:  &#8377; <%=listing.price.toLocaleString("en-IN")%> / night</b> <br>
            </div>
            <div class="mt-1">
              <b>Location: </b><%=listing.location%> <br>
            </div>
            <div class="mt-1">
              <b>Country: </b><%= listing.country%>
            </div>
            </p>
          <div class="row mt-4">
            <div class="col-12 d-flex justify-content-sm-start gap-2">
              <%if(currUser && currUser._id.equals(listing.owner._id)){%>
              <form method="get" action="/listings/<%=listing._id%>/edit">
                <button class="btn btn-danger">Edit</button>
              </form>
              <form
                method="post"
                action="/listings/<%=listing._id%>?_method=DELETE"
              >
                <button class="btn btn-dark">Delete</button>
              </form>
            <%}%>
            </div>
          </div>
          <hr>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12 d-flex justify-content-center">
    <%if(currUser){ %>
    <div class="card w-75 listing-card">
        <h5>Leave Reviews</h5>
        <div class="card-body ms-2">
        <p class="card-text">
          <form method="post" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>

            <div>
              <label for="rating">Rating</label>
              <fieldset class="starability-slot mt-2">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <!-- <div>
              <label for="rating" class="form-label">Rating</label>
              <input type="range" name="review[rating]" id="rating" class="form-range" min="1" max="5" required>
            </div> -->
            <div>
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" id="comment" class="form-control" required placeholder="Best Beach view, Good staff must visit "></textarea>
              <div class="invalid-feedback">
              Please Enter your Comment
            </div>
            </div>
            <button class="btn btn-danger mt-4">Add Review</button>
          </form>
          </p>
          <hr>
        </div>
        </div>
        <%}%>
    </div>


   <div class="col-lg-12 d-flex justify-content-center">
  <div class="card w-75 listing-card">
      <h5 class="mb-3">All Reviews</h5>
      <div class="row">
        <% for (review of listing.reviews) { %>
          <div class="col-md-6">
            <div class="card p-2 mb-3">
              <div class="card-body">
                <h5 class="card-title">@<%=review.author.username%></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><b>Comment: </b><%= review.comment %></p>
                <!-- <p class="card-text"><b>Rating: </b><%= review.rating %></p> -->
              </div>
              <% if(currUser && currUser._id.equals(review.author._id)){%>
                <form class="mt-2" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id %>?_method=DELETE">
                  <button class="btn btn-dark btn-sm">Delete</button>
                </form>
                <%}%>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

</body>
